<%= form_for @title do |f| %>
  <% if @title.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@title.errors.count, "error") %> prohibited this title from being saved:</h2>
      <ul>
      <% @title.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Name" %>
    <%= f.text_field :name %>
    <br/>
    <%#= f.fields_for :images, @title.images.build do |builder| %>
    <%= f.fields_for :images do |builder| %>
      <fieldset>
        <%= builder.label :name, "Image Name" %><br/>
        <%= builder.text_field :name %>
        <%= builder.label :asset_image, "Upload New Title Image" %><br/>
        <%= builder.file_field :asset_image %>

        <%#= builder.fields_for :image_types do |fff| %>
          <%#= fff.label :name "Image Type Name" %>
          <%#= fff.option_select :name %>
        <%#= end %>
        <%#= render 'shared/image_fields', f: builder %>
        <%#= link_to_add_fields "Add Image", f, :images %>
      </fieldset>

    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


